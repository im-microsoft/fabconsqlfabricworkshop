{
    "files.associations": {
        "*.sql": "sql"
    },
    "sql.format.enable": true,
    "sql.format.keywordCase": "upper",
    "files.encoding": "utf8",
    "files.eol": "\r\n",
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "[sql]": {
        "editor.defaultFormatter": "ms-mssql.mssql",
        "editor.formatOnSave": true,
        "editor.wordWrap": "on"
    }
}